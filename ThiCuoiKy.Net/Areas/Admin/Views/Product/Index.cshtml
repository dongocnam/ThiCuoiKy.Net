@model IEnumerable<ProductModel>
@{
    ViewData["title"] = "Product Listed";
    var counter = 1; // Initialize the counter
}
<h3>Danh sách sản phẩm</h3>
<a asp-action="Create" asp-controller="Product">Thêm Sản Phẩm</a>

<table class="table">
    <thead>
        <tr>
            <th scope="col">STT</th>
            <th scope="col">Tên</th>
            <th scope="col">Mô tả</th>
            <th scope="col">Giá</th>
            <th scope="col">Phân Loại</th>
            <th scope="col">Hình ảnh</th>
            <th scope="col">Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td scope="row">@counter</td> <!-- Use the counter variable here -->
                <td>@item.Name</td>
                <td style="width: 430px ">@Html.Raw(item.Description)</td>
                <td>@item.Price</td>
                <td>@item.Brand.Name</td>
                <td><img src="~/media/products/@item.Img" width="120"></td>
                <td>
                    <a asp-action="Edit" class="btn btn-warning btn-sm" asp-controller="Product" asp-route-Id="@item.Id">Sửa</a>
                    <a asp-action="Delete" class="btn btn-danger btn-sm" asp-controller="Product" asp-route-Id="@item.Id">Xóa</a>
                </td>
            </tr>
            counter++; // Increment the counter
        }
    </tbody>
</table>
