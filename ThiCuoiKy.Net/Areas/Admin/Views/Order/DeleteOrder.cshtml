@model IEnumerable<ThiCuoiKy.Net.Models.OrderModel>

@{
    ViewData["Title"] = "Orders";
}

<h2>Đơn đặc hàng</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Order Code</th>
            <th>User Name</th>
            
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderCode</td>
                <td>@order.UserName</td>
               
                <td>
                    <a href="@Url.Action("ViewOrder", new { ordercode = order.OrderCode })">View</a> |
                    <form asp-action="DeleteOrder" asp-route-ordercode="@order.OrderCode" method="post" style="display:inline">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this order?');">Xóa</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
